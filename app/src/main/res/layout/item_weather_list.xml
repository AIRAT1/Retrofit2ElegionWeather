<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/corner_radius"
    android:layout_marginTop="@dimen/activity_horizontal_margin_8"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_8"
    android:layout_marginRight="@dimen/activity_horizontal_margin_8"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.android.retrofit2elegionweather.ui.views.AspectRatioImageView
                android:id="@+id/aspect_ratio_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:alpha="0.9"
                app:aspect_ratio="2.78"/>

            <TextView
                android:id="@+id/item_short_weather"
                android:gravity="center_horizontal"
                style="@style/ItemWeather"
                android:layout_gravity="center"
                tools:text="Braunschweig 20 C"/>
        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>