<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/corner_radius"
    android:layout_marginTop="@dimen/activity_horizontal_margin_8"
    android:layout_marginLeft="@dimen/activity_horizontal_margin_8"
    android:layout_marginRight="@dimen/activity_horizontal_margin_8"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.android.retrofit2elegionweather.ui.views.AspectRatioImageView
                android:id="@+id/german_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gradient"
                android:background="#a0000000"
                android:alpha="0.9"
                app:aspect_ratio="2.78"/>
            <TextView
                android:id="@+id/item_city_name"
                style="@style/ItemWeather"
                android:layout_gravity="center_vertical"
                tools:text="Braunschweig"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_16"/>
            <TextView
                android:id="@+id/item_temperature"
                style="@style/ItemWeather"
                android:layout_gravity="center_vertical|right"
                tools:text="20 C"
                android:layout_marginRight="@dimen/activity_horizontal_margin_16"/>
        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>